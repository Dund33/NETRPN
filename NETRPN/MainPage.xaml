<Page
    x:Class="NETRPN.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NETRPN"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="SQRT" Name="BtnSqrt" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="1" Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="*" Name="BtnMult" FontSize="38" Click="FuncPressedEventHandler"/>
        <Button Grid.Column="2" Grid.Row="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="/" Name="BtnDiv" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="1" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="-" Name="BtnSub" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="0" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="+" Name="BtnAdd" FontSize="38" Click="FuncPressedEventHandler" Grid.ColumnSpan="1"></Button>

        <Button Grid.Column="0" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="SIN" Name="BtnSin" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="1" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="COS" Name="BtnCos" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="2" Grid.Row="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="TAN" Name="BtnTan" FontSize="38" Click="FuncPressedEventHandler"></Button>

        <Button Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="EXP" Name="BtnExp" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="2" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="X&lt;=&gt;Y" Name="BtnSwap" FontSize="38" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="0" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="LOG" Name="BtnLog" FontSize="38" Click="FuncPressedEventHandler"/>

        <Button Grid.Column="1" Grid.Row="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="0" FontSize="38" Click="DigitPressedEventHandler"/>

        <Button Grid.Column="0" Grid.Row="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="1" FontSize="38" Click="DigitPressedEventHandler"/>
        <Button Grid.Column="1" Grid.Row="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="2" FontSize="38" Click="DigitPressedEventHandler"/>
        <Button Grid.Column="2" Grid.Row="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="3" FontSize="38" Click="DigitPressedEventHandler"/>

        <Button Grid.Column="0" Grid.Row="11" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="4" FontSize="38" Click="DigitPressedEventHandler"/>
        <Button Grid.Column="1" Grid.Row="11" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="5" FontSize="38" Click="DigitPressedEventHandler"></Button>
        <Button Grid.Column="2" Grid.Row="11" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="6" FontSize="38" Click="DigitPressedEventHandler"/>

        <Button Grid.Column="0" Grid.Row="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="7" FontSize="38" Click="DigitPressedEventHandler"></Button>
        <Button Grid.Column="1" Grid.Row="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="8" FontSize="38" Click="DigitPressedEventHandler"></Button>
        <Button Grid.Column="2" Grid.Row="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="9" FontSize="38" Click="DigitPressedEventHandler"></Button>


        <Button Grid.Column="0" Grid.Row="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="." FontSize="48" Click="DigitPressedEventHandler" IsEnabled="{Binding Path=DotEnable}"></Button>
        <Button Grid.Column="4" Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ENTER" FontSize="48" Click="FuncPressedEventHandler"></Button>

        <Button Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="CLEAR X" FontSize="48" Click="FuncPressedEventHandler"></Button>
        <Button Grid.Column="2" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="AC" FontSize="48" Click="FuncPressedEventHandler"></Button>

        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="White" Name="tTextBox" Foreground="Black" IsReadOnly="True" Text="{Binding Path=Ts}" FontSize="22"></TextBox>
        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="White" Name="zTextBox" Foreground="Black" IsReadOnly="True" Text="{Binding Path=Zs}" FontSize="22"></TextBox>
        <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Background="White" Name="yTextBox" Foreground="Black" IsReadOnly="True" Text="{Binding Path=Ys}" FontSize="22"></TextBox>
        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Background="White" Name="xTextBox" Foreground="Black" IsReadOnly="True" Text="{Binding Path=Xs}" FontSize="22"></TextBox>
    </Grid>
</Page>
